{
  "manifest_version": 3,
  "name": "Light Color Picker",
  "version": "0.1",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_icon": {
      "16": "./images/light-color-16.png",
      "24": "./images/light-color-24.png",
      "32": "./images/light-color-32.png",
      "48": "./images/light-color-48.png",
      "128": "./images/light-color-128.png"
    }
  },
  "icons": {
    "16": "./images/light-color-16.png",
    "24": "./images/light-color-24.png",
    "32": "./images/light-color-32.png",
    "48": "./images/light-color-48.png",
    "128": "./images/light-color-128.png"
  },
  "options_page": "./options.html"

}